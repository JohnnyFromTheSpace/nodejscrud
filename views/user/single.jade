extends ../layout

// user
block content
    h1= title
    p Welcome to #{title}
    form(action="/user/#{user.id}/delete" method="DELETE")
        button(type="submit") delete

    form(action="/user/#{action}" method="#{method}")
        l name:
        input(type="text" name="fname" placeholder="your name" value="#{user.fname || ''}")
        br
        l surname:
        input(type="text" name="lname" placeholder="your surname" value="#{user.lname || ''}")
        br
        button(type="submit") save

    p: a(href="/users") list
